@model IEnumerable<W5code.Models.Community>

<div class="container body-content panel-body">
    <br />
    @{
        ViewData["Title"] = "Index";
    }

    <h3>Developers Community</h3><br />


    <div class="container">
        @foreach (var item in Model)
        {

        <p><b> @Html.DisplayNameFor(model => model.PostDate):</b> @Html.DisplayFor(modelItem => item.PostDate)</p>   

                <p><b> @Html.DisplayNameFor(model => model.Name):</b> @Html.DisplayFor(modelItem => item.Name)</p>

               <p><b> @Html.DisplayNameFor(model => model.Subject): </b>@Html.DisplayFor(modelItem => item.Subject)</p>

                <p><b> @Html.DisplayNameFor(model => model.BodyMessage): </b>@Html.DisplayFor(modelItem => item.BodyMessage)</p>

                <p>
                    <a asp-action="Create">New Post</a> |
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>

                </p><hr />
                     
        }

   </div>



