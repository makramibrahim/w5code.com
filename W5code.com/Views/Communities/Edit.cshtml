@model W5code.Models.Community

<div class="container body-content panel-body">
    <br />

    @{
        ViewData["Title"] = "Edit";
    }

    <h2>Edit</h2>

    <h4>Community</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
